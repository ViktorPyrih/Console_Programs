<Window x:Class="Lab_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        
        <Image x:Name="PictureBox" Grid.Row="0" Grid.Column="0"/>

        <StackPanel Grid.Row="0" Grid.Column="0" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Margin="20, 20" Width="120" Height="50">

            <Button Width="50" 
                    Content="←" FontSize="30"
                    x:Name="ButtonLeft" Click="Button_Click" IsEnabled="False"/>
            
            <Button Width="50" Margin="20,0,0,0" 
                    Content="→" FontSize="30"
                    x:Name="ButtonRight" Click="Button_Click"/>

        </StackPanel>

    </Grid>
</Window>
